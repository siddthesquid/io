{
  "$schema": "node_modules/nx/schemas/nx-schema.json",
  "extends": "nx/presets/npm.json",
  "affected": {
    "defaultBase": "main"
  },
  "workspaceLayout": {
    "appsDir": "app",
    "libsDir": "lib"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "test",
          "lint",
          "ci:build",
          "ci:test",
          "ci:lint"
        ]
      }
    }
  },
  "namedInputs": {
    "project": ["{projectRoot}/**/*"],
    "includeSrc": ["{projectRoot}/src/**/*"],
    "excludeTest": [
      "!{projectRoot}/**/*.(test|spec).[jt]sx?",
      "!{projectRoot/tests?/**/*"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["generate", "^build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "ci:build": {
      "dependsOn": ["ci:generate", "^ci:build"]
    },
    "ci:test": {
      "dependsOn": ["ci:generate"]
    },
    "ci:lint": {
      "dependsOn": ["ci:generate"]
    },
    "ci:publish": {
      "dependsOn": ["^publish"]
    }
  }
}
